<div class='account-page' id='account-page'>

    <div class=' account-page_header'>
      <h3>アカウントの編集</h3>
    </div>

    <div class='user-form'>
      <%= form_with model: current_user, local: true do |f|%>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
